<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Landing_Page">


    <LinearLayout
        android:id="@+id/ll_lay1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eded"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/acc_ico" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_lay2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/ll_lay1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/acc_ico" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buffet_deals" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/acc_ico" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restaurant_deals" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/acc_ico" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/party_deals" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/acc_ico" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discounts" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/ll_lay3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_lay2"
        android:background="@color/off_white">

        <!-->menu 1<-->
        <RelativeLayout
            android:id="@+id/menu_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <!-->menu 2<-->

        <RelativeLayout
            android:id="@+id/menu_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <!-->menu 3<-->
        <RelativeLayout
            android:id="@+id/menu_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_2">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>







    </RelativeLayout>


</RelativeLayout>